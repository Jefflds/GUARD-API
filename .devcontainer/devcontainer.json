{
  "name": "GUARD-API",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/guard-api",
  "features": {
    "ghcr.io/devcontainers-community/npm-features/typescript:1": {}
  },
  "forwardPorts": [3000],
  "postCreateCommand": "npm i -g @nestjs/cli && git init && git config --global --add safe.directory /workspaces/guard-api",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true
      },
      "extensions": ["esbenp.prettier-vscode", "editorconfig.editorconfig"]
    }
  }
}
